<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/constraintLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/consultorio_background_blue"
	tools:context="com.Milton.Consultorio.Fragment.Pacientes_Tab2"
	tools:ignore="HardcodedText">

	<ScrollView
		android:id="@+id/ScrollView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:id="@+id/VerticalLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginVertical="1dp"
					android:autoSizeTextType="uniform"
					android:text="Nombre"
					android:textColor="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small" />

				<EditText
					android:id="@+id/Tab2_EditT_Paciente"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:autoSizeTextType="uniform"
					android:autofillHints="Nombre del paciente"
					android:hint="..."
					android:inputType="textPersonName"
					android:textColor="@color/DefaultTextColor"
					android:textColorHint="@color/DefaultTextColor" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginVertical="5dp"
					android:autoSizeTextType="uniform"
					android:text="Dirección de correo"
					android:textColor="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small" />

				<EditText
					android:id="@+id/Tab2_EditT_Correo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginBottom="10dp"
					android:autoSizeTextType="uniform"
					android:autofillHints="Cónyugue"
					android:hint="..."
					android:inputType="textEmailAddress"
					android:textColor="@color/DefaultTextColor"
					android:textColorHint="@color/DefaultTextColor" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginVertical="1dp"
					android:autoSizeTextType="uniform"
					android:text="R.F.C."
					android:textColor="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small" />

				<EditText
					android:id="@+id/Tab2_EditT_RFC"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginBottom="10dp"
					android:autofillHints=""
					android:backgroundTint="@color/colorPrimary"
					android:hint="..."
					android:inputType="textCapCharacters"
					android:textColor="@color/DefaultTextColor"
					android:textColorHint="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small"
					android:textStyle="italic" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginVertical="1dp"
					android:autoSizeTextType="uniform"
					android:text="Domicilio"
					android:textColor="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small" />

				<EditText
					android:id="@+id/Tab2_EditT_Dom"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginBottom="10dp"
					android:autofillHints=""
					android:backgroundTint="@color/colorPrimary"
					android:hint="..."
					android:inputType="textPostalAddress"
					android:textColor="@color/DefaultTextColor"
					android:textColorHint="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small"
					android:textStyle="italic" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginVertical="1dp"
					android:autoSizeTextType="uniform"
					android:text="Otros Datos"
					android:textColor="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small" />

				<EditText
					android:id="@+id/Tab2_EditT_Otro"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="10dp"
					android:layout_marginBottom="10dp"
					android:autofillHints=""
					android:backgroundTint="@color/colorPrimary"
					android:inputType="text"
					android:lines="5"
					android:textColor="@color/DefaultTextColor"
					android:textColorHint="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small"
					android:textStyle="italic" />

				<Button
					android:id="@+id/Tab2_Btn_AgregarFactura"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginVertical="10dp"
					android:layout_marginHorizontal="10dp"
					android:background="@drawable/button_rounded"
					android:text="AGREGAR FACTURA"
					android:textColor="@color/DefaultTextColor"
					android:textSize="@dimen/TextSize_Small"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>