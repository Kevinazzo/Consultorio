<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/consultorio_background_blue"
	android:orientation="vertical"
	tools:context="com.Milton.Consultorio.Activity.TabsPacientesActivity">


	<Button
		android:id="@+id/BTNagregar2"
		android:layout_width="98dp"
		android:layout_height="35dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="12dp"
		android:background="@drawable/button_rounded_border"
		android:text="NUEVO"
		android:textColor="#FFF"
		android:textSize="13sp"
		android:textStyle="bold"
		app:layout_constraintStart_toEndOf="@+id/BTNeliminar2"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/BTNeliminar2"
		android:layout_width="98dp"
		android:layout_height="35dp"
		android:layout_marginTop="12dp"
		android:background="@drawable/button_rounded_border"
		android:text="ELIMINAR"
		android:textColor="#FFF"
		android:textSize="13sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.025"
		app:layout_constraintStart_toEndOf="@+id/BTNbuscar2"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="MissingConstraints" />

	<Button
		android:id="@+id/BTNactualizar2"
		android:layout_width="98dp"
		android:layout_height="35dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="12dp"
		android:background="@drawable/button_rounded_border"
		android:text="ACTUALIZAR"
		android:textColor="#FFF"
		android:textSize="13sp"
		android:textStyle="bold"
		app:layout_constraintStart_toEndOf="@+id/BTNagregar2"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="MissingConstraints" />

	<Button
		android:id="@+id/BTNbuscar2"
		android:layout_width="88dp"
		android:layout_height="39dp"
		android:layout_marginTop="12dp"
		android:background="@drawable/button_rounded"
		android:text="Buscar"
		android:textColor="#FFF"
		android:textSize="13sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.018"
		app:layout_constraintStart_toEndOf="@+id/Pacientes_EditTxt_NombrePaciente"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="MissingConstraints" />

	<EditText
		android:id="@+id/Pacientes_EditTxt_NombrePaciente"
		android:layout_width="196dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:backgroundTint="@color/colorPrimary"
		android:ems="10"
		android:hint="  Nombre del paciente"
		android:inputType="textPersonName"
		android:textColor="#FFFFFF"
		android:textColorHint="#FFFFFF"
		android:textSize="13sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.009" />

	<com.google.android.material.tabs.TabLayout
		android:id="@+id/Layout_Pacientes_TabSelector"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="60dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

	</com.google.android.material.tabs.TabLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:fillViewport="true"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/Layout_Pacientes_TabSelector">

		<androidx.viewpager.widget.ViewPager
			android:id="@+id/Layout_Pacientes_TabContainer"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			app:layout_constraintTop_toBottomOf="@+id/Layout_Pacientes_TabSelector">
		</androidx.viewpager.widget.ViewPager>
	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>